.award-container{text-align:left;margin:5px}.award{display:inline-block;position:relative;overflow:hidden;text-align:center;vertical-align:middle}.award .backdrop{position:absolute;top:2px;left:2px}.award .overlay{position:absolute;top:0;left:0;text-align:center;line-height:1em;color:#fff}.award-xs{height:20px;width:20px}.award-xs .backdrop{height:16px;width:16px}.award-xs .overlay{font-size:20px}.award-sm{height:36px;width:36px}.award-sm .backdrop{height:32px;width:32px}.award-sm .overlay{font-size:36px}.award-md{height:68px;width:68px}.award-md .backdrop{height:64px;width:64px}.award-md .overlay{font-size:68px}.award-lg{height:100px;width:100px}.award-lg .backdrop{height:96px;width:96px}.award-lg .overlay{font-size:100px}.award-xl{height:132px;width:132px}.award-xl .backdrop{height:128px;width:128px}.award-xl .overlay{font-size:132px}