function moderateAttachEvents(){$('#report_submit').click(function(e){$.post($('#report_modal').attr('data-target'),$('#report_form').serialize(),function(result){$('#report_error_reason').addClass('hidden').text('');$('#report_error_offset').addClass('hidden').text('');$('#report_error_comments').addClass('hidden').text('');if(result.success){$('#report_body').addClass('hidden');$('#report_thanks').removeClass('hidden');$('#report_submit').addClass('hidden');$('#report_close').text('Close');}else{for(i=0;i<result.errors.length;i++){if(result.errors[i][0]=='__all__'){$('#report_error').removeClass('hidden').text(result.errors[i][1]);}else if(result.errors[i][0]=='reason'){$('#report_error_reason').removeClass('hidden').text(result.errors[i][1]);}else if(result.errors[i][0]=='offset'){$('#report_error_offset').removeClass('hidden').text(result.errors[i][1]);}else if(result.errors[i][0]=='comments'){$('#report_error_comments').removeClass('hidden').text(result.errors[i][1]);}}}});});}